@using Petify.Core.Model
@model PetProfileViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    <h2>@ViewData["RegisteredName"]  </h2>
    <div class="row col-12">
        <div class="col-6">
        </div>
        <div class="col-6">
            <form class="horizontal-form" asp-action="UpdatePetProfile">

                <div class="form-group">
                    <label>Pet Name</label>
                    <input type="text" required asp-for="PetName" class="form-control" />
                    <span asp-validation-for="PetName"></span>
                </div>

                <div class="form-group">
                    <label>Pet Type</label>
                    <select asp-for="PetTypeId" asp-items="ViewBag.PetType" class="form-control"></select>
                    <span asp-validation-for="PetTypeId"></span>
                </div>

                <div class="form-group">
                    <label>Pet Gender</label>
                    <select asp-for="PetGenderId" asp-items="ViewBag.Gender" class="form-control"></select>
                    <span asp-validation-for="PetGenderId"></span>
                </div>

                <div class="form-group">
                    <label>Date Of Birth</label>
                    <input type="date" required asp-for="DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth"></span>
                </div>


                <div class="form-group">
                    <label>Allergy</label>
                    <select asp-for="AllergyId" asp-items="ViewBag.Allergy" class="form-control"></select>
                    <span asp-validation-for="AllergyId"></span>
                </div>


                <div class="form-group">
                    <label>Description</label>
                    <input type="text" required asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description"></span>
                </div>

                <div class="form-group">
                    <label>Pet Address</label>
                    <input type="text" required asp-for="PetAddress" class="form-control" />
                    <span asp-validation-for="PetAddress"></span>
                </div>

                <div class="form-group">
                    <label>Pet City</label>
                    <input type="text" required asp-for="PetCity" class="form-control" />
                    <span asp-validation-for="PetCity"></span>
                </div>

                <hr />
                <div class="form-group">
                    <input type="submit" value="Update Profile" />
                </div>
            </form>

        </div>
    </div>
}
