@model GroomModelComponents

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <h2>@ViewData["RegisteredService"]  </h2>
    <div class="row col-12">
        <div class="col-6">
            <table>
                <thead>
                <th>Id</th>
                <th>Service Id</th>
                <th>Billing Id</th>
                <th>Created</th>
               
                </thead>


                <tbody>
                    @if (Model.groomings != null)
                    {
                        foreach (var item in Model.groomings)
                        {
                            <tr>
                                <td>@item.Id </td>
                                <td>@item.ServiceId</td>
                                <td>@item.BillingId</td>
                                <td>@item.Created</td>

                            </tr>
                        }
                    }
                </tbody>


                <tfoot></tfoot>
            </table>
        </div>
        <div class="col-6">
            <form class="horizontal-form" asp-action="CreateGrooming">

                <div class="form-group">
                    <label>Service Id</label>
                    <input type="text" required asp-for="grooming.ServiceId" class="form-control" />
                    <span asp-validation-for="grooming.ServiceId"></span>
                </div>

                <div class="form-group">
                    <label>Billing Id</label>
                    <input type="text" required asp-for="grooming.BillingId" class="form-control" />
                    <span asp-validation-for="grooming.BillingId"></span>
                </div>

                <hr />

                <div class="form-group">
                    <input type="submit" value="Proceed" />
                </div>
            </form>

        </div>
    </div>
}