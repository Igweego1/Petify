@model LoginViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
   
    <div class="col-6">
    <form class="horizontal-form" asp-action="Login">
     
   
     <div class="form-group">
       <label>Username</label>
     <input type="text" required asp-for="UserName" class="form-control"/>
      <span asp-validation-for="UserName"></span>
     </div>
    
      <div class="form-group">
       <label>Password</label>
     <input type="password" required asp-for="Password" class="form-control"/>
      <span asp-validation-for="Password"></span>
     </div>
      
     <hr />
      <div class="form-group">
     <input type="submit" value="Login"/></div>
    </form>
      <br />
    <h7>Don't have an account?<a href = "Register"> Register</a></h7>
   </div>

   
   
}
