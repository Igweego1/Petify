@model BookingComponents

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <h2>@ViewData["RegisteredBooking"]  </h2>
    <div class="row col-12">
        <div class="col-6">
            <table>
                <thead>
                <th>Id</th>
                <th>CheckIn</th>
                 <th>CheckOut</th>
                <th>ServiceId</th>
                 <th>BillingId</th>
               
                </thead>


                <tbody>
                    @if (Model.bookings != null)
                    {
                        foreach (var item in Model.bookings)
                        {
                            <tr>
                                <td>@item.Id </td>
                                <td>@item.CheckInDate</td>
                                <td>@item.CheckOutDate</td>
                                 <td>@item.ServiceId</td>
                                  <td>@item.BillingId</td>
                            </tr>
                        }
                    }
                </tbody>


                <tfoot></tfoot>
            </table>
        </div>
        <div class="col-6">
            <form class="horizontal-form" asp-action="CreateBooking">

                <div class="form-group">
                    <label>Check In Date</label>
                    <input type="date" required asp-for="booking.CheckInDate" class="form-control" />
                    <span asp-validation-for="booking.CheckInDate"></span>
                </div>

                <div class="form-group">
                    <label>Check Out Date</label>
                    <input type="date" required asp-for="booking.CheckOutDate" class="form-control" />
                    <span asp-validation-for="booking.CheckOutDate"></span>
                </div>

                 <div class="form-group">
                    <label>Service Id</label>
                    <input type="text" required asp-for="booking.ServiceId" class="form-control" />
                    <span asp-validation-for="booking.ServiceId"></span>
                </div>

                <div class="form-group">
                    <label>Billing Id</label>
                    <input type="text" required asp-for="booking.BillingId" class="form-control" />
                    <span asp-validation-for="booking.BillingId"></span>
                </div>

                <hr />

                <div class="form-group">
                    <input type="submit" value="Proceed" />
                </div>
            </form>

        </div>
    </div>
}